        app:srcCompat="@drawable/leaderboard_image" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="400dp"
        android:layout_height="230dp"
        android:layout_marginBottom="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
