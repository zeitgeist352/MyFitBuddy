<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.SignUpActivity"
    android:background="@color/gray">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_margin="15dp"
    android:background="@color/white">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_signup_head"
        android:text="Enter your credientals"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_signup_name"
        android:layout_below="@+id/textView_signup_head"
        android:layout_alignLeft="@id/textView_signup_head"
        android:text="Full name*"
        android:textColor="@color/black"
        android:padding="6dp"
        android:textSize="16sp"
        android:layout_marginTop="50dp"/>
        
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_signup_name"
        android:hint="Enter your full name"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_below="@+id/textView_signup_name"
        android:layout_alignLeft="@id/textView_signup_head"
        android:background="@drawable/border"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_signup_email"
        android:layout_below="@+id/textView_signup_name"
        android:text="Email*"
        android:textColor="@color/black"
        android:padding="6dp"
        android:textSize="16sp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_signup_email"
        android:hint="Enter your email"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_below="@+id/textView_signup_email"
        android:background="@drawable/border"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_signup_dob"
        android:layout_below="@+id/textView_signup_email"
        android:text="Date Of Birth (DD/MM/YYYY)*"
        android:textColor="@color/black"
        android:padding="6dp"
        android:textSize="16sp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_signup_dob"
        android:hint="Enter your date of birth (DD/MM/YYYY)"
        android:inputType="datetime"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_below="@+id/textView_signup_dob"
        android:background="@drawable/border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_signup_gend"
        android:layout_below="@+id/textView_signup_dob"
        android:text="Gender*"
        android:textColor="@color/black"
        android:padding="6dp"
        android:textSize="16sp"
        android:layout_marginTop="50dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textView_signup_gend"
        android:id="@+id/radio_group_signup_gend">

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Male"
            android:textColor="@color/cyan"
            android:textSize="16sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_female"
            android:layout_marginStart="230dp"
            android:layout_marginTop="10dp"
            android:text="Female"
            android:textSize="16sp"
            android:textColor="@color/pink"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_signup_mobile"
        android:layout_below="@+id/textView_signup_gend"
        android:text="Mobile Number*"
        android:textColor="@color/black"
        android:padding="6dp"
        android:textSize="16sp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_signup_mobile"
        android:hint="Enter Your Mobile Number"
        android:inputType="datetime"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_below="@+id/textView_signup_mobile"
        android:background="@drawable/border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_signup_password"
        android:layout_below="@+id/textView_signup_mobile"
        android:text="Password*"
        android:textColor="@color/black"
        android:padding="6dp"
        android:textSize="16sp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_signup_password"
        android:hint="Enter your password"
        android:inputType="datetime"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_below="@+id/textView_signup_password"
        android:background="@drawable/border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_signup_confirm_password"
        android:layout_below="@+id/textView_signup_password"
        android:text="Confirm Password*"
        android:textColor="@color/black"
        android:padding="6dp"
        android:textSize="16sp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_signup_confirm_password"
        android:hint="Confirm your password"
        android:inputType="datetime"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_below="@+id/textView_signup_confirm_password"
        android:background="@drawable/border"/>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_below="@id/edit_text_signup_confirm_password"
        android:layout_marginTop="50dp"
        android:text="Register"
        android:textAlignment="center"
        android:textSize="15sp"
        android:background="@color/dark_slate_blue"
        android:textColor="@color/light_gray"/>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        android:visibility="visible"
        android:background="@color/lime"
        android:scaleX="1.5"
        android:scaleY="1.5" />







</RelativeLayout>



</ScrollView>