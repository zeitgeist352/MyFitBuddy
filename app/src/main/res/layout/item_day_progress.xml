<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/border"
    android:layout_marginVertical="6dp">

    <TextView
        android:id="@+id/textDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textBurned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burned: 0 kcal"
        android:textColor="#FF0000"
        android:layout_marginTop="4dp" />

    <ProgressBar
        android:id="@+id/progressBurned"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="8dp"
        android:progressDrawable="@drawable/progress_red" />

    <TextView
        android:id="@+id/textConsumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consumed: 0 kcal"
        android:textColor="#008000"
        android:layout_marginTop="4dp" />

    <ProgressBar
        android:id="@+id/progressConsumed"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:progressDrawable="@drawable/progress_green" />
</LinearLayout>